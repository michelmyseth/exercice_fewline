{% extends "layout.njk" %} {% block content %}
<div class="container-fluid"><h2>PLATFORMS</h2></div>
<div class="container">
  <div class="row row-cols-2 row-cols-lg-4 g-4">
    {% for platform in platforms %}

    <div class="col">
      <div class="card text-white bg-dark mb-3" style="max-width: 18rem">
        <img src="{{ platform.cover }}" class="img-thumbnail" alt="..." />
        <div class="card-body">
          <p class="text-center">{{ platform.name }}</p>
          <div class="d-grid gap-2 col-6 mx-auto">
            <a href="platforms/{{ platform.slug }}" class="btn btn-danger">PAY TO GO</a>
          </div>
        </div>
      </div>
    </div>
    {% endfor %}
  </div>
</div>

{% endblock %}
