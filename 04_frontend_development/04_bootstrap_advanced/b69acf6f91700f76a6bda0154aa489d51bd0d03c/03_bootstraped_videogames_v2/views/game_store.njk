{% extends "layout.njk" %} {% block content %}

<div class="container-fluid"><h2>Game</h2></div>

<div class="card mb-3" id="game-card" style="max-width: 540px">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{ game.cover_url }}" alt="..." />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{ game.name }}</h5>
        <p class="card-text" id="resume">
          {{ game.summary }}
        </p>
        <div class="progress">
          <div
            class="progress-bar bg-info"
            role="progressbar"
            style="width: 50%"
            aria-valuenow="50"
            aria-valuemin="0"
            aria-valuemax="100"
          ></div>
        </div>
        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
      </div>
    </div>
  </div>
</div>

{% endblock %}
